<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_two_lines_height">

    <!-- Bottom View -->
    <LinearLayout
        android:id="@+id/bottom_view_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        android:weightSum="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/list_action_captured"
            android:layout_width="@dimen/list_item_two_lines_icon_size"
            android:layout_height="@dimen/list_item_two_lines_icon_size"
            android:layout_marginLeft="@dimen/list_item_two_lines_icon_padding_left"
            android:layout_marginStart="@dimen/list_item_two_lines_icon_padding_left"
            android:layout_marginRight="@dimen/list_item_two_lines_icon_padding_right"
            android:layout_marginEnd="@dimen/list_item_two_lines_icon_padding_right"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_captured_white" />

        <ImageView
            android:id="@+id/list_action_favorites"
            android:layout_width="@dimen/list_item_two_lines_icon_size"
            android:layout_height="@dimen/list_item_two_lines_icon_size"
            android:layout_marginLeft="@dimen/list_item_two_lines_icon_padding_left"
            android:layout_marginStart="@dimen/list_item_two_lines_icon_padding_left"
            android:layout_marginRight="@dimen/list_item_two_lines_icon_padding_right"
            android:layout_marginEnd="@dimen/list_item_two_lines_icon_padding_right"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_bookmarks_white" />

    </LinearLayout>

    <!-- Surface View -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="@dimen/list_item_two_lines_avatar_max_width"
            android:layout_height="@dimen/list_item_two_lines_avatar_max_width"
            android:layout_marginLeft="@dimen/list_item_two_lines_avatar_padding_left"
            android:layout_marginStart="@dimen/list_item_two_lines_avatar_padding_left"
            android:layout_marginRight="@dimen/list_item_two_lines_avatar_padding_right"
            android:layout_marginEnd="@dimen/list_item_two_lines_avatar_padding_right"
            android:maxWidth="@dimen/list_item_two_lines_avatar_max_width" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.List" />

            <TextView
                android:id="@+id/list_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.List.Small" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/list_item_two_lines_icon_padding_left"
            android:layout_marginStart="@dimen/list_item_two_lines_icon_padding_left"
            android:layout_marginRight="@dimen/list_item_two_lines_icon_padding_right"
            android:layout_marginEnd="@dimen/list_item_two_lines_icon_padding_right"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/list_secondary_icon"
                android:layout_width="@dimen/list_item_two_lines_icon_size"
                android:layout_height="@dimen/list_item_two_lines_icon_size"
                android:layout_marginRight="@dimen/list_item_two_lines_icon_padding_right"
                android:layout_marginEnd="@dimen/list_item_two_lines_icon_padding_right" />

            <ImageView
                android:id="@+id/list_primary_icon"
                android:layout_width="@dimen/list_item_two_lines_icon_size"
                android:layout_height="@dimen/list_item_two_lines_icon_size" />

        </LinearLayout>

    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>